{
	"manifest_version": 2,
	"name": "WhiteBuster",
	"version": "1.2",

	"description": "Busting whites since 2017",
	"browser_action": {
		"default_icon": "whitebuster.png",
		"default_popup": "popup.html"
	},

	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"run_at": "document_end",
			"js": ["whitebuster.js"]
		}
	],

	"permissions": [
		"storage",
		"tabs"
	]	
}
