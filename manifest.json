{
	"manifest_version": 2,
	"name": "WhiteBuster",
	"version": "1.2.4",

	"description": "Busting whites since 2017",
	"browser_action": {
		"default_icon": "whitebuster128.png",
		"default_popup": "popup.html"
	},

	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"run_at": "document_end",
			"js": ["whitebuster.js"]
		}
	],

	"background": {
		"scripts": ["background.js"]
	},

	"permissions": [
		"storage",
		"http://*/*", 
		"https://*/*"
	],

	"icons": { 
		"16": "whitebuster16.png",
		"48": "whitebuster48.png",
		"128": "whitebuster128.png" 
	}
}
